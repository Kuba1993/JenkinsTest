pipeline{
    agent none
    stages {
        stage('backend-container') {
        agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11'}
        }
        steps {
            sh 'mvn -- version'
        }
        }
    }
    stage('frontend-container') {
        agent{
            docker { image 'node:16-alpine' }
        }
        steps {
            sh 'node --version'
        }
    }
   }